<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 3%">
            <div id="form1">
                <a href="/dashboard">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do panelu administracyjnego
                </a>
                <h1 class="login">Edytuj pytanie <q><%= question.title %></q></h1>
                <% if(error.length > 0){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if(success.length > 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                <% } %>
                <form action="/questions/<%= question._id %>?_method=PUT" method="post">
                   
                    <label for="username" class="username">
                        Edytuj kategorię
                        
                    </label>
                    <input type="text" name="question[category]" value="<%= question.category %>" class="form-control" disabled>
                        
                    <br>
                    <label for="username" class="username">
                        Edytuj typ
                        
                    </label>
                    <input type="text" name="question[type]" id="type" value="<%= question.type %>" class="form-control" disabled>
                        
                    <br>  
                    <label for="username" class="username">
                       Edytuj tytuł
                        
                    </label>
                    <input type="text" name="question[title]" value="<%= question.title %>" placeholder="np. Z jakiej bajki jest ten kadr?" class="form-control">
                    <br>
                    <label for="username" class="username">
                        Edytuj czas na odpowiedź
                         
                     </label>
                     <input type="number" name="question[timeToAnswer]" value="<%= question.timeToAnswer %>" placeholder="np. 60" class="form-control">
                     <br>
                     <% if(question.type === "Cytat"){ %>
                        <div id="quote">
                            <label for="username" class="username quote_desc">
                                Edytuj cytat
                                 
                            </label>
                            <textarea name="question[quote]" placeholder="Muszu, ty geniuszu" class="form-control"><%= question.quote %></textarea>
                            <br>
                         </div>
                     <% } %>
                     
                     
                     
                    <input type="submit" value="Edytuj pytanie" class="btn btn-danger button">
                   
                </form>
            </div>
           
        </div>
        
    </div>
</div>

</body>
</html>